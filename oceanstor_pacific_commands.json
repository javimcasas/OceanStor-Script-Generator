                    },
                    {
                        "name": "account_name",
                        "field_type": "text"
                    },
                    {
                        "name": "sync_write_enabled",
                        "field_type": "select",
                        "allowed_values": ["yes", "no"]
                    },
                    {
                        "name": "dir_umask",
                        "field_type": "text"
                    },
                    {
                        "name": "file_umask",
