                    },
                    {
                        "name": "offline_file_mode",
                        "field_type": "select",
                        "allowed_values": ["none", "manual", "documents", "programs"]
                    },
                    {
                        "name": "smb2_ca_enabled",
                        "field_type": "select",
                        "allowed_values": ["yes", "no"]
                    },
                    {
                        "name": "ip_control_enabled",
                        "field_type": "select",
                        "allowed_values": ["yes", "no"]
                    },
                    {
                        "name": "abe_enabled",
                        "field_type": "select",
                        "allowed_values": ["yes", "no"]
                    },
                    {
                        "name": "audit_items",
                        "field_type": "text"
                    },
                    {
                        "name": "file_filter_enable",
                        "field_type": "select",
